<%- include('header') -%>

    <title>Questionarre</title>

    <div class="container-fluid text-center">
        <h3>Please fill the small questionarre below</h3>
    </div>

    <form action="/form" method="post">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-4 col-lg-4 col-sm-6 label">
                    <h5>Email address</h5>
                </div>
                <div class="col-md-8 col-lg-8 col-sm-6 align-self-center inputBox">
                    <input type="email" name="email" id="email">
                </div>
            </div>
        </div>
        <% controls.radioData.forEach(data => { %>
            <div class="container-fluid control">
                <div class="container-fluid">
                    <h5>
                        <%= data.title %>
                    </h5>
                </div>

                <div class="align-self-center">
                    <% data.options.forEach(option=>{ %>
                        <div class="form-check">
                            <input type="radio" name="<%= data.name %> " class="form-check-input" value="<%= option.value %> ">
                            <label class="form-check-label"><%= option.label %></label>
                        </div>
                        <% }) %>
                </div>
            </div>
            <% }) %>
                <div class="btnBox">
                    <button class="btn btn-lg btn-danger" type="reset">Reset</button>
                    <button class="btn btn-lg btn-primary" type="submit">Submit</button>
                </div>
                </div>
    </form>

    </body>

    </html>